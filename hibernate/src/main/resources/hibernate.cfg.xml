<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">totoadmin</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3308/hiberdb</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="entity.Skill"/>
        <mapping class="entity.Tool"/>
        <mapping class="entity.User"/>
        <mapping class="entity.Project"/>
        <mapping class="entity.ServiceEvent"/>
        <mapping class="entity.Donation"/>
        <mapping class="entity.Comment"/>
        <mapping class="entity.Community"/>
    </session-factory>
</hibernate-configuration>